# Database Configuration
MYSQL_ROOT_PASSWORD=changeme_root_password_123!
MYSQL_DATABASE=mautic
MYSQL_USER=mautic
MYSQL_PASSWORD=changeme_db_password_456!

# Mautic Configuration
# Generate a random 32-character string for the secret key
MAUTIC_SECRET_KEY=changeme_generate_random_32_chars

# Site URL (no trailing slash)
# For local development: http://localhost:8080
# For production: https://your-domain.com
MAUTIC_SITE_URL=http://localhost:8080

# SMTP Configuration (for sending emails)
# Example for Gmail:
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_ENCRYPTION=tls
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_ENCRYPTION=tls

# Mautic Admin Credentials (for initial setup)
MAUTIC_ADMIN_EMAIL=admin@example.com
MAUTIC_ADMIN_PASSWORD=changeme_admin_password_789!
MAUTIC_ADMIN_USERNAME=admin

# Time Zone (PHP timezone format)
TZ=America/New_York

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379